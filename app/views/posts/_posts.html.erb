<table class="table mt-4">
  <thead>
  <tr>
    <th scope="col">Content</th>
    <th scope="col">Posted At</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.content, post_path(post.id) %></td>
      <td><%= time_ago_in_words(post.created_at) %> ago</td>
      <td><%= link_to "Delete", post_path(post), method: :delete, class: "btn btn-danger" %> </td>
    </tr>
  <% end %>
  </tbody>
</table>